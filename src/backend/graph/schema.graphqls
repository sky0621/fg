# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Quest {
  id: ID!
  title: String!
  text: String!
  reward: String!
  incentive: String
}

type Query {
  quests: [Quest!]!
  quest(id: ID!): Quest!
}

input NewQuest {
  title: String!
  text: String!
  reward: String!
  incentive: String
}

type Mutation {
  createQuest(input: NewQuest!): Quest!
}