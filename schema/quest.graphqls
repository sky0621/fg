extend type Query {
    quests: [Quest!]!
    quest(id: ID!): Quest!
}

extend type Mutation {
    createQuest(input: NewQuest!): Quest!
    updateQuest(id: ID!, input: NewQuest!): Quest!
}

type Quest {
    id: ID!
    title: String!
    text: String!
    reward: String!
    incentive: String
}

input NewQuest {
    title: String!
    text: String!
    reward: String!
    incentive: String
}
